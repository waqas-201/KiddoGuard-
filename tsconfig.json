{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": [
      "ESNext"
    ],
    "jsx": "react-native",
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "build",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "app/navigation/**/*",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "/services"
  ],
  "exclude": [
    "**/__tests__/*",
    "**/__mocks__/*",
    "**/__rsc_tests__/*",
    "node_modules"
  ],
  "extends": "expo/tsconfig.base"
}
